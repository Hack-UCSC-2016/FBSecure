{
    "manifest_version": 2,
    "name": "FBSecure",
    "version": "0.1",
    "permissions": ["http://*.facebook.com/*", "storage"],
    "content_scripts": [
          {
              "matches": [
                  "https://www.facebook.com/*"
              ],
              "js": ["data/jquery.js", "data/cryptico.js", "data/cryptotest.js", "data/main.js", "chrome/chromeSpecific.js"]
          }
    ],
    "browser_action": {
        "default_icon": "data/icon-16.png",
        "default_popup": "data/popup.html"
    },
    "background": {
        "scripts": ["chrome/crypto.js", "chrome/background.js"]
    }
}
